<input type="text" value="<%=@prediction["date"]%>">
<textarea col="50" row="100"><%=@prediction["horoscope"]%></textarea>
<input type="text" value="<%=@prediction["sunsign"]%>">
<label for="comment">Comment</label>
<input id="comment_sign_up" type="text" name="comment" value="">

<!-- Using Boostrap Modal styling but calling custom javascript code -->
<div id="signUpModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="noThx close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">User Not Registered</h4>
      </div>
      <div class="modal-body">
        <p>You must sign up to save comments.</p>
      </div>
      <div class="modal-footer">
        <%= link_to "Sign Up!", "/users/sign_up", id: "subButton", class: "btn btn-primary" %>
        <button type="button" class="noThx btn btn-default">No Thanks</button>
      </div>
    </div>
  </div>
</div>

<% if current_user.nil? %>
  <%= link_to "Save", "#", id: "comment_saveBtn", action: "sign_up_modal" %>
<% end %>
